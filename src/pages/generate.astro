---
import AppShellLayout from "../layouts/AppShellLayout.astro";
import { GenerateView } from "../components/generate";

export const prerender = false;
---

<AppShellLayout title="Generator fiszek AI | 10x Cards">
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    <header class="mb-8">
      <h1 class="text-3xl font-bold tracking-tight">Generator fiszek AI</h1>
      <p class="text-muted-foreground mt-2">
        Wklej tekst źródłowy, a AI wygeneruje dla Ciebie propozycje fiszek edukacyjnych.
      </p>
    </header>
    <GenerateView client:load />
  </div>
</AppShellLayout>
