---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "10x Cards" } = Astro.props;

export const prerender = false;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="10x Cards - Generuj fiszki edukacyjne z pomocą AI" />
    <title>{title}</title>
    
    <!-- Prevent flash of unstyled content for theme -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('10x-cards-theme');
        if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body class="min-h-screen bg-background text-foreground antialiased">
    <main class="flex min-h-screen flex-col items-center justify-center p-4">
      <div class="mb-8 text-center">
        <h1 class="text-3xl font-bold tracking-tight">
          <span class="text-primary">10x</span> Cards
        </h1>
        <p class="mt-2 text-muted-foreground">
          Generuj fiszki edukacyjne z pomocą AI
        </p>
      </div>
      
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100%;
  }
</style>
